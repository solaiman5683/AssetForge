{
	"name": "assetforge",
	"version": "1.0.0",
	"description": "Local asset optimization toolkit (images, pdf, audio, svg, json) with CLI + UI.",
	"type": "module",
	"main": "electron/main.js",
	"bin": {
		"assetforge": "src/cli.js"
	},
	"scripts": {
		"start": "node src/cli.js",
		"ui": "node src/ui/server.js",
		"dev:ui": "node src/ui/server.js",
		"cloud": "node src/ui/server-cloud.js",
		"electron": "cd electron && npm start",
		"electron:dev": "cd electron && npm run dev",
		"build:win": "cd electron && electron-builder --win --x64",
		"build:linux": "cd electron && electron-builder --linux",
		"build:all": "cd electron && electron-builder --win --linux",
		"dist": "npm run build:all",
		"test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
		"prepublishOnly": "npm test",
		"docker:build": "docker build -t assetforge .",
		"docker:run": "docker-compose up"
	},
	"files": [
		"src/**/*",
		"README.md",
		"LICENSE",
		"docs/**/*"
	],
	"keywords": [
		"assets",
		"optimization",
		"images",
		"pdf",
		"audio",
		"svg",
		"json",
		"local",
		"compression",
		"minify",
		"resize",
		"convert",
		"watermark",
		"cli",
		"ui"
	],
	"author": "Solaiman <solaiman@example.com>",
	"repository": {
		"type": "git",
		"url": "https://github.com/solaiman5683/AssetForge.git"
	},
	"homepage": "https://github.com/solaiman5683/AssetForge#readme",
	"bugs": {
		"url": "https://github.com/solaiman5683/AssetForge/issues"
	},
	"license": "MIT",
	"dependencies": {
		"@ffmpeg/ffmpeg": "^0.12.7",
		"commander": "^12.1.0",
		"formidable": "^3.5.1",
		"pdf-lib": "^1.17.1",
		"sharp": "^0.33.3",
		"svgo": "^3.2.0"
	},
	"devDependencies": {
		"electron": "^39.2.7",
		"electron-builder": "^26.4.0",
		"jest": "^29.7.0"
	},
	"build": {
		"appId": "com.assetforge.app",
		"productName": "AssetForge",
		"files": [
			"electron/**/*",
			"src/processors/**/*",
			"src/utils/**/*",
			"src/ui/index-desktop.html",
			"src/ui/app-desktop.js",
			"node_modules/**/*"
		],
		"directories": {
			"output": "dist"
		},
		"win": {
			"target": [
				"nsis"
			],
			"icon": "electron/icon.ico"
		},
		"linux": {
			"target": [
				"AppImage",
				"deb"
			],
			"icon": "electron/icon.png",
			"category": "Graphics"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true,
			"createDesktopShortcut": true,
			"createStartMenuShortcut": true
		}
	},
	"engines": {
		"node": ">=18"
	}
}
